.container.mx-auto
  %form.max-w-md.mx-auto.space-y-4.mb-4{action: '/signup', method: "POST"}
    %div
      %label.bg-red-500.text-white.p-4{for: 'email'} Email:
      %input.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.focus:outline-none.focus:ring-2.focus:ring-blue-500.focus:border-blue-500{type: "email", id: "email", name: "email", required: true}

      %label.block.text-sm.font-medium.text-gray-700.mb-1{for: 'password'} Password:
      %input.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.focus:outline-none.focus:ring-2.focus:ring-blue-500.focus:border-blue-500{type: "password", id: "password", name: "password", required: true}

      %button.w-full.bg-blue-600.text-white.py-2.px-4.rounded-md.hover:bg-blue-700.focus:outline-none.focus:ring-2.focus:ring-blue-500.focus:ring-offset-2{type: "submit"} Sign up