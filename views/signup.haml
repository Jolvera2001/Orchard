.max-w-md.mx-auto.mt-8.p-6.border.rounded{"x-data" => "{ mode: 'signin' }"}
  -# Simple toggle buttons
  .flex.gap-2.mb-6
    %button.px-4.py-2.border.rounded{"@click" => "mode = 'signin'", ":class" => "mode === 'signin' ? 'bg-blue-500 text-white' : 'bg-gray-100'"}
      Sign In
    %button.px-4.py-2.border.rounded{"@click" => "mode = 'signup'", ":class" => "mode === 'signup' ? 'bg-blue-500 text-white' : 'bg-gray-100'"}
      Sign Up

  -# Signup Form
  %div{"x-show" => "mode === 'signup'"}
    %h2.text-xl.mb-4 Create Account
    %form.space-y-3{action: '/signup', method: 'POST'}
      %input.w-full.p-2.border.rounded{type: 'text', name: 'username', placeholder: 'Username', required: true}
      %input.w-full.p-2.border.rounded{type: 'text', name: 'stub', placeholder: 'Stub', required: true}
      %input.w-full.p-2.border.rounded{type: 'email', name: 'email', placeholder: 'Email', required: true}
      %input.w-full.p-2.border.rounded{type: 'password', name: 'password', placeholder: 'Password', required: true}
      %button.w-full.p-2.bg-blue-500.text-white.rounded{type: 'submit'} Sign Up

  -# Signin Form
  %div{"x-show" => "mode === 'signin'"}
    %h2.text-xl.mb-4 Welcome Back
    %form.space-y-3{action: '/signin', method: 'POST'}
      %input.w-full.p-2.border.rounded{type: 'email', name: 'email', placeholder: 'Email', required: true}
      %input.w-full.p-2.border.rounded{type: 'password', name: 'password', placeholder: 'Password', required: true}
      %button.w-full.p-2.bg-blue-500.text-white.rounded{type: 'submit'} Sign In